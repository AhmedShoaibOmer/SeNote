<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeScreenFragment">

    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.aso.senote.ui.fragments.addEditNote.AddEditNoteFragment"
        android:label="AddEditNoteFragment"
        tools:layout="@layout/fragment_note">
        <action
            android:id="@+id/action_noteFragment_to_homeScreenFragment"
            app:destination="@id/homeScreenFragment" />
        <argument
            android:name="noteId"
            android:defaultValue="-1L"
            app:argType="long" />
        <argument
            android:name="notebookId"
            android:defaultValue="-1L"
            app:argType="long" />
        <argument
            android:name="addOrPreview"
            app:argType="com.aso.senote.ui.activities.MainActivity.Action" />

    </fragment>
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.aso.senote.ui.fragments.homescreen.HomeScreenFragment"
        android:label="HomeScreenFragment"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreenFragment_to_notebookFragment"
            app:destination="@id/notebookFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_homeScreenFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment"
            app:enterAnim="@anim/slide_in_enter"
            app:exitAnim="@anim/slide_in_exit"
            app:popEnterAnim="@anim/slide_out_enter"
            app:popExitAnim="@anim/slide_out_exit" />
    </fragment>
    <fragment
        android:id="@+id/notebookFragment"
        android:name="com.aso.senote.ui.fragments.notebook.NotebookFragment"
        android:label="NotebookFragment"
        tools:layout="@layout/fragment_notebook">
        <action
            android:id="@+id/action_notebookFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment"
            app:enterAnim="@anim/slide_in_enter"
            app:exitAnim="@anim/slide_in_exit"
            app:popEnterAnim="@anim/slide_out_enter"
            app:popExitAnim="@anim/slide_out_exit" />
        <argument
            android:name="notebookId"
            app:argType="long" />
    </fragment>
</navigation>