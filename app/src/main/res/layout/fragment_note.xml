<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSurface">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/appbar_editor_floating_round_background"

            app:elevation="4dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#00000000"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@drawable/ic_note_fragment_back">


            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="72dp"
            android:background="#00000000"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/note_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:hint="@string/title"
                    android:inputType="textMultiLine"
                    android:minHeight="56dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:scrollbars="none"
                    android:scrollHorizontally="false"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/colorOnSurface"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/content_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:clickable="false"
                    android:gravity="start|top"
                    android:hint="@string/start_write_some_content_here"
                    android:inputType="textMultiLine|textLongMessage"
                    android:lineSpacingExtra="6dp"
                    android:lineSpacingMultiplier="1.0"
                    android:linksClickable="true"
                    android:longClickable="false"
                    android:paddingStart="14dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="72dp"
                    android:scrollbars="none"
                    android:scrollHorizontally="false"
                    android:textColor="@color/colorOnSurface" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <include
            android:id="@+id/editor_actionbar"
            layout="@layout/fragment_note_editor_actionbar" />

        <include
            android:id="@+id/editor_preferences_panel"
            layout="@layout/fragment_note_preference_panel" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</RelativeLayout>

